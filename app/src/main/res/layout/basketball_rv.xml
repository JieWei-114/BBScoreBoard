<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFF070"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTVTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:padding="3dp"
            android:text="Team A"
            android:fontFamily="@font/germania_one"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/idTVTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:padding="3dp"
            android:textSize="20dp"
            android:text="Team B"
            android:fontFamily="@font/germania_one"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFC107"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTVTeamAResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:padding="3dp"
            android:text="Team A Score"
            android:fontFamily="@font/germania_one"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/idTVTeamBResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:padding="3dp"
            android:text="Team B Score"
            android:fontFamily="@font/germania_one"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>