<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bandb"
    tools:context=".History"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="HISTORY"
            android:fontFamily="@font/germania_one"
            android:textColor="#FFFAF8"
            android:textSize="48sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/butbadhis"
            android:layout_width="330dp"
            android:layout_height="61dp"
            android:backgroundTint="#CA5E3C"
            android:text="Badminton"
            android:fontFamily="@font/germania_one"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/butbashis"
            android:layout_width="330dp"
            android:layout_height="61dp"
            android:backgroundTint="#CA5E3C"
            android:text="Basketball"
            android:fontFamily="@font/germania_one"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/butbck"
            android:layout_width="330dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ED987E"
            android:fontFamily="sans-serif-black"
            android:text="BACK"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>